
/* ------------------------ NAVBAR ----------------*/


header{
  display:flex;
  height: 70px;
  justify-content: space-between;
  color: white;
  background: #007ff0

}

.logo {
  z-index: 1;
  margin: 0px;
  padding: 0%;
  height: 150px; 
  width: 150px;
  
}

header div{
  display:flex;
  justify-content: space-between;
  align-items: center;
  font-family: MyWebFont;
  margin: 0;
}

header div i{
  font-size: 2rem;
  margin: 1rem;
}


header nav{
  padding: 1px;
}

nav ul li{
  list-style: none;
  display: inline;
  text-transform: uppercase;
  font-weight: bold;
  letter-spacing: 1px;
}

nav li a{
  padding: 2px;
  margin: 15px;
  text-decoration: none;
  color: white;
  transition: all 250ms ease-in;
}

nav li a:hover{
  background: #e3c940;
  color: black;
}


