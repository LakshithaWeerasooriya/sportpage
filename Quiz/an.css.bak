/* Style the header */
.myheader {
 margin-top:0;
 padding:0;
 height: 150px;
 background-image:url(quiqui.jpg);
 background-size:cover;
 color: #000000;
 box-shadow: 0 2px 5px rgba(255,101,47,.2);

 }
 /* Page content */
 .content {
 padding: 16px; }
.sticky {
 position: fixed;
 top: 0;
 width: 100%

}
/* Add  top padding to the page  ( header gets a new position at the top of the page (position:fixed and top:0) */
.sticky + .content {
 padding-top: 52px;
}
/*calculate score*/
#score{
 position: fixed;
 top: 100px;
 color:#000000;
 font-weight:bold;font-size:20px;
}
/*add a clock*/
